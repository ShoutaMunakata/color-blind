{
    "manifest_version": 3,
    "name": "Color Blind Mode",
    "description": "Enables a color-blind friendly mode for websites.",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  